 <div class='trail-day-show'> 
  <div class="list-group">
    <div class="list-group-item">
      <h1 class="list-group-item-heading"><%= @trail_day.start_time.inspect %></h1>
      <p><%= @trail_day.description %></p>
      <hr />
      <p class="list-group-item-text">Duration (hours):</p>
      <h4 class="list-group-item-heading"><%= @trail_day.duration_in_hours %></h4>
      <p class="list-group-item-text">Participants:</p>
      <h4 class="list-group-item-heading"><%= @trail_day.participant_email_addresses %></h4>
      <p class="list-group-item-text">Coordinates:</p>
      <h4 class="list-group-item-heading">(<%= @trail_day.latitude.round(4) %>, <%= @trail_day.longitude.round(4) %>)</h4>
    </div>
  </div>

  <%= link_to 'Email Participants' %>
</div>
